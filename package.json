{
  "name": "cortex-recall",
  "version": "0.1.0",
  "description": "Semantic code & git history search CLI with pluggable embeddings and vector storage",
  "type": "module",
  "license": "MIT",
  "author": "ShadReyes",
  "repository": {
    "type": "git",
    "url": "https://github.com/ShadReyes/cortex-recall.git"
  },
  "homepage": "https://github.com/ShadReyes/cortex-recall",
  "bugs": {
    "url": "https://github.com/ShadReyes/cortex-recall/issues"
  },
  "keywords": [
    "semantic-search",
    "code-search",
    "vector-search",
    "embeddings",
    "rag",
    "tree-sitter",
    "ollama",
    "openai",
    "lancedb",
    "cli",
    "developer-tools",
    "monorepo",
    "git-search"
  ],
  "engines": {
    "node": ">=22.0.0"
  },
  "bin": {
    "cortex-recall": "./dist/index.js"
  },
  "files": [
    "dist/**",
    "src/lang/**/grammars/*.wasm"
  ],
  "scripts": {
    "build": "tsc",
    "dev": "tsx src/index.ts",
    "start": "node dist/index.js",
    "test": "vitest run",
    "test:unit": "vitest run test/unit",
    "test:integration": "vitest run test/integration",
    "test:watch": "vitest",
    "bench": "vitest bench",
    "bench:unit": "vitest bench bench/unit",
    "bench:integration": "vitest bench bench/integration",
    "bench:no-ollama": "MOCK_OLLAMA=1 vitest bench"
  },
  "dependencies": {
    "@lancedb/lancedb": "^0.26.2",
    "chalk": "^5.4.1",
    "commander": "^13.1.0",
    "glob": "^11.0.1",
    "lodash.merge": "^4.6.2",
    "minimatch": "^9.0.0",
    "web-tree-sitter": "0.25.3"
  },
  "devDependencies": {
    "@types/lodash.merge": "^4.6.9",
    "@types/node": "^22.0.0",
    "tsx": "^4.19.0",
    "typescript": "^5.7.0",
    "vitest": "^4.0.18"
  }
}
